<% provide(:title, 'Home') %>
<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
	  <h1>What does the meow mean?</h1>
	  <h2>Meow means yes, meow means no.</h2>

	  <%= link_to "Sign up your cat. Right meow.", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<!-- 	<%= link_to image_tag("tonks.png", alt: "Rails"), "http://kendraosburn.org/" %> -->
<% end %>